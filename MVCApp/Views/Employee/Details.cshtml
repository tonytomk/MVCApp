@model MVCApp.Models.Employee
@{
    ViewBag.Title = "ED";
}
<div style="font-family:Arial">
    <h2>Employee Details</h2>

    <table>
        <tr>
            <td>
                Employee ID:
            </td>
            <td>
                @Model.EmployeeId
            </td>
        </tr>
        <tr>
            <td>
                Name:
            </td>
            <td>
                @Model.Name
            </td>
        </tr>
        <tr>
            <td>
                Gender:
            </td>
            <td>
                @Model.Gender
            </td>
        </tr>
        <tr>
            <td>
                City:
            </td>
            <td>
                @Model.City
            </td>
        </tr>
    </table>
    @*@Html.ActionLink("Back", "Index")*@
    @Html.ActionLink("Back to Employee List", "Index", new { departmentId = @Model.DepartmentId })
</div>